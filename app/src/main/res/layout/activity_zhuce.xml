<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zhuceActivity"
    android:background="@drawable/z_c">
    <EditText
        android:id="@+id/et_3"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:textColor="#FFAD33"
        android:textSize="20sp"
        android:background="@drawable/but_uername"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="155dp"
        android:gravity="center_horizontal"
        android:text="输入账号："
        android:textColor="#000000"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/et_4"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFAD33"
        android:textSize="20sp"
        android:background="@drawable/but_uername"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:inputType="textPassword"/>
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/tv_2"
        android:text="输入密码："
        android:textColor="#000000"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/et_5"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFAD33"
        android:textSize="20sp"
        android:background="@drawable/but_uername"
        android:layout_alignParentRight="true"
        android:layout_below="@id/et_4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLines="1"
        android:inputType="textPassword"/>
    <TextView
        android:id="@+id/tv_4"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/tv_3"
        android:text="确认密码："
        android:textColor="#000000"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/bt_zhuce"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/et_5"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/btn_2"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>